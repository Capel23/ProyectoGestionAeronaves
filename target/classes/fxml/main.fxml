<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.aeronautica.controller.MainController"
            prefWidth="1600" prefHeight="900">

    <top>
        <VBox>
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
                <Label text="✈" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
                <Label text="Sistema de Gestión de Aeronaves" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblUsuario" style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;"/>
                <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" onAction="#cerrarSesion" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
            <HBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 10 15 10 15;">
                <Button text="Nueva Aeronave" onAction="#nuevaAeronave" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Editar" onAction="#editarAeronave" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Eliminar" onAction="#eliminarAeronave" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Separator orientation="VERTICAL"/>
                <Button text="Refrescar" onAction="#refrescarTabla" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
                <Button text="Exportar" onAction="#exportarDatos" style="-fx-background-color: #16a085; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="txtBuscar" promptText="Buscar matrícula o modelo..." prefWidth="250" onKeyReleased="#buscarAeronave"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Lista de Aeronaves" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <TableView fx:id="tableAeronaves" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colMatricula" text="Matrícula" prefWidth="150"/>
                    <TableColumn fx:id="colModelo" text="Modelo" prefWidth="250"/>
                    <TableColumn fx:id="colHorasVuelo" text="Horas de Vuelo" prefWidth="130"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="150"/>
                    <TableColumn fx:id="colRevisiones" text="Revisiones" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
                <Label fx:id="lblTotal" text="Total: 0 aeronaves" style="-fx-font-weight: bold;"/>
                <Separator orientation="VERTICAL"/>
                <Label fx:id="lblOperativas" text="Operativas: 0" style="-fx-text-fill: #27ae60;"/>
                <Label fx:id="lblMantenimiento" text="En Mantenimiento: 0" style="-fx-text-fill: #f39c12;"/>
                <Label fx:id="lblFueraServicio" text="Fuera de Servicio: 0" style="-fx-text-fill: #e74c3c;"/>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #2c3e50; -fx-padding: 8;">
            <Label text="Sistema de Mantenimiento Aeronáutico v2.0" style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>
