<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.aeronautica.controller.LoginController"
           styleClass="scene-background"
           alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox spacing="12" alignment="CENTER" styleClass="login-box">
        <Label text="Sistema de Gestión de Aeronaves" styleClass="brand-title" />

        <TextField fx:id="txtUser" promptText="Usuario" />
        <PasswordField fx:id="txtPass" promptText="Contraseña" />
        <Button text="Iniciar Sesión" onAction="#login" />

        <Label fx:id="lblError" styleClass="error-label" />
    </VBox>

</StackPane>
