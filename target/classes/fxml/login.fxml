<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aeronautica.controller.LoginController"
      spacing="10" alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Sistema de Gestión de Aeronaves" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="txtUser" promptText="Usuario" />
    <PasswordField fx:id="txtPass" promptText="Contraseña" />
    <Button text="Iniciar Sesión" onAction="#login" />

    <Label fx:id="lblError" textFill="red" />

</VBox>
