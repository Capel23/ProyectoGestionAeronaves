<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.aeronautica.controller.MainController">

    <!-- Cabecera -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Gestión de Aeronaves" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Contenido central: TableView -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="tableAeronaves" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="colMatricula" text="Matrícula" prefWidth="150"/>
                    <TableColumn fx:id="colModelo" text="Modelo" prefWidth="250"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="200"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Button text="Refrescar" onAction="#refrescarTabla"/>
                <Button text="Guardar" onAction="#guardarAeronave"/>
                <Button text="Eliminar" onAction="#eliminarAeronave"/>
            </HBox>

        </VBox>
    </center>

    <!-- Pie de página -->
    <bottom>
        <HBox>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Aerolínea de ejemplo - Sistema de Mantenimiento"/>
        </HBox>
    </bottom>

</BorderPane>
